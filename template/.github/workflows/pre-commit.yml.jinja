name: pre-commit

on:
  push:

permissions:
  checks: write
  contents: read

jobs:
  deptry:
    runs-on: ubuntu-latest
    steps:
      - name: "Build the virtual environment"
        uses: tschm/cradle/actions/environment@v0.1.68

      - uses: tschm/cradle/actions/deptry@v0.1.68
        with:
          source-folder: src/{{ project_name }}

  pre-commit:
    runs-on: ubuntu-latest
    steps:
      - uses: tschm/cradle/actions/pre-commit@0.1.68
