name: pre-commit

on:
  push:

permissions:
  checks: write
  contents: read

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout [${% raw %}{{ github.repository }}{% endraw %}]
        uses: actions/checkout@v4

      - uses: cvxgrp/.github/actions/uv/coverage@v2.0.6
        with:
          source-folder: src/{{ project_name }}
          tests-folder: src/tests

      - name: Coveralls GitHub Action
        if: ${{ env.ACT != 'true' }}  # Skip if running with 'act'
        uses: coverallsapp/github-action@v2
        with:
          files: artifacts/tests/coverage/coverage.info
          format: lcov

  deptry:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout [${% raw %}{{ github.repository }}{% endraw %}]
        uses: actions/checkout@v4

      - uses: cvxgrp/.github/actions/uv/deptry@v2.0.6
        with:
          source-folder: src/{{ project_name }}

  pre-commit:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout [${% raw %}{{ github.repository }}{% endraw %}]
        uses: actions/checkout@v4

      - uses: pre-commit/action@v3.0.1
        with:
          extra_args: '--verbose --all-files'
